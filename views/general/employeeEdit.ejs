<% include employeeMenu %>
<div class="block">
    <h3>基本资料</h3>
    <table class="detail-table">
        <tr>
            <td class="row-title">用户名</td>
            <td><%= user.username %></td>
        </tr>
        <tr>
            <td class="row-title">密码</td>
            <td><input type="password" name="password" />不修改请勿填写本项</td>
        </tr>
        <tr>
            <td class="row-title">姓名</td>
            <td><input type="text" class="textbox" name="name" value="<%= user.name %>" /></td>
        </tr>
        <tr>
            <td class="row-title">工号</td>
            <td><input type="text" class="textbox" name="jobNumber" value="<%= user.jobNumber %>" /></td>
        </tr>
        <tr>
            <td class="row-title">性别</td>
            <td>
                <select name="sex">
                    <option<%= user.sex == '男' ? ' selected' : '' %>>男</option>
                    <option<%= user.sex == '女' ? ' selected' : '' %>>女</option>
                </select>
            </td>
        </tr>
        <tr>
            <td class="row-title">照片</td>
            <td><input type="file" name="file" />不上传请勿填写本项</td>
        </tr>
        <tr>
            <td class="row-title">就职日期</td>
            <td><input type="text" class="textbox datetime" name="takeOfficeTime" value="<%= moment(user.takeOfficeTime).format('YYYY-MM-DD') %>" /></td>
        </tr>
        <tr>
            <td class="row-title">角色</td>
            <td><%= user.role %></td>
        </tr>
        <tr>
            <td class="row-title">学历</td>
            <td><%= user.diploma %></td>
        </tr>
        <tr>
            <td class="row-title">部门</td>
            <% if (user.department) { %>
            <td><a href="/general/department/<%= user.department._id %>" target="_blank"><%= user.department.title %></a></td>
            <% } else { %>
            <td>未指派</td>
            <% } %>
        </tr>
        <% if (permission['employee-private'].query) { %>
        <tr>
            <td class="row-title">身份证号</td>
            <td><%= user.PRCIdentity %></td>
        </tr>
        <tr>
            <td class="row-title">通信地址</td>
            <td><%= user.address %></td>
        </tr>
        <% } %><h3>担保人资料</h3>
        <table class="detail-table">
            <tr>
                <td class="row-title">姓名</td>
                <td><%= user.cautioner.name %></td>
            </tr>
            <tr>
                <td class="row-title">联系电话</td>
                <td><%= user.cautioner.phone %></td>
            </tr>
            <tr>
                <td class="row-title">身份证号</td>
                <td><%= user.cautioner.PRCIdentity %></td>
            </tr>
            <tr>
                <td class="row-title">通信地址</td>
                <td><%= user.cautioner.address %></td>
            </tr>
        </table>
    </table>
</div>