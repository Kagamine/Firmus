<% include employeeMenu %>
<div class="block">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" name="_csrf" value="<%= csrf %>" />
        <h3>基本资料</h3>
        <table class="detail-table">
            <tr>
                <td class="row-title">用户名</td>
                <td><%= user.username %></td>
            </tr>
            <tr>
                <td class="row-title">密码</td>
                <td><input type="password" class="textbox" name="password" /> 不修改请勿填写本项</td>
            </tr>
            <tr>
                <td class="row-title">姓名</td>
                <td><input type="text" class="textbox nullable" name="name" value="<%= user.name %>" /></td>
            </tr>
            <tr>
                <td class="row-title">工号</td>
                <td><input type="text" class="textbox nullable" name="jobNumber" value="<%= user.jobNumber %>" /></td>
            </tr>
            <tr>
                <td class="row-title">性别</td>
                <td>
                    <select name="sex">
                        <option<%= user.sex == '男' ? ' selected' : '' %>>男</option>
                        <option<%= user.sex == '女' ? ' selected' : '' %>>女</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td class="row-title">照片</td>
                <td><input type="file" name="file" /> 不上传请勿填写本项</td>
            </tr>
            <tr>
                <td class="row-title">就职日期</td>
                <td><input type="text" class="textbox nullable datetime" name="takeOfficeTime" value="<%= moment(user.takeOfficeTime).format('YYYY-MM-DD') %>" /></td>
            </tr>
            <tr>
                <td class="row-title">角色</td>
                <td>
                    <select name="role">
                        <% enums.role.forEach(x => { %>
                        <option<%= x == user.role ? ' selected' : '' %>><%= x %></option>
                        <% }) %>
                    </select>
                </td>
            </tr>
            <tr>
                <td class="row-title">学历</td>
                <td><input type="text" class="textbox nullable" name="diploma" value="<%= user.diploma %>" /></td>
            </tr>
            <tr>
                <td class="row-title">部门</td>
                <td>
                    <select name="department">
                        <option value="">未指派</option>
                        <% departments.forEach(x => { %>
                        <option value="<%= x._id %>"><%= x.city %> - <%= x.title %></option>
                        <% }) %>
                    </select>
                </td>
            </tr>
            <tr>
                <td class="row-title">身份证号</td>
                <td><input type="text" class="textbox nullable" name="PRCIdentity" value="<%= user.PRCIdentity %>" /></td>
            </tr>
            <tr>
                <td class="row-title">通信地址</td>
                <td><input type="text" class="textbox nullable" name="PRCIdentity" value="<%= user.address %>" /></td>
            </tr>
        </table>
        <br />
        <h3>担保人资料</h3>
        <table class="detail-table">
            <tr>
                <td class="row-title">姓名</td>
                <td><input type="text" class="textbox nullable" name="cautioner-name" value="<%= user.cautioner.name %>" /></td>
            </tr>
            <tr>
                <td class="row-title">联系电话</td>
                <td><input type="text" class="textbox nullable" name="cautioner-phone" value="<%= user.cautioner.phone %>" /></td>
            </tr>
            <tr>
                <td class="row-title">身份证号</td>
                <td><input type="text" class="textbox nullable" name="cautioner-PRCIdentity" value="<%= user.cautioner.PRCIdentity %>" /></td>
            </tr>
            <tr>
                <td class="row-title">通信地址</td>
                <td><input type="text" class="textbox nullable" name="cautioner-address" value="<%= user.cautioner.address %>" /></td>
            </tr>
        </table>
        <p><input type="submit" value="保存" class="button blue" /></p>
    </form>
</div>