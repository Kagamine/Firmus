<h2><%= title %>
    <% if (permission.department.modify) { %>
    <a class="add" href="javascript:$('#frmCreateCar').submit()">添加车辆</a>
    <% } %>
</h2>
<form class="search">
    检索：
    <input type="text" name="line" class="textbox" placeholder="线路名称" value="<%= req.query.title %>" />&nbsp;
    <input type="text" name="plate" class="textbox" placeholder="车牌号" value="<%= req.query.title %>" />&nbsp;
    <input type="submit" class="button green" style="margin: 0" value="过滤" />
</form>
<table class="table">
    <thead>
    <tr>
        <th class="tl">线路名称</th>
        <th class="tl">车牌号</th>
        <th>操作</th>
    </tr>
    </thead>
    <tbody>
    <% cars.forEach(x => { %>
    <tr id="<%= x._id %>">
        <td class="tl"><%= x.line %></td>
        <td class="tl"><%= x.plate %></td>
        <td class="tc">
            <a href="/general/car/<%= x._id %>">查看线路</a>
            <%  if (permission.car.modify) { %>
            <a href="/general/department/edit/<%= x._id %>">修改</a>
            <a href="javascript:deleteDialog('/general/car/delete/<%= x._id %>', '<%= x._id %>');">删除</a>
            <% } %>
        </td>
    </tr>
    <% }) %>
    </tbody>
</table>
<div class="pager">
    <a class="pager-item" href="/general/department?p=1&title=<%= req.query.title %>&type=<%= req.query.type %>">«</a>
    <% for(var i = start; i <= end; i++) { %>
    <a class="pager-item <%= page == i ? 'active' : '' %>" href="/general/department?p=<%= i %>&title=<%= req.query.title %>&type=<%= req.query.type %>""><%= i %></a>
    <% } %>
    <a class="pager-item" href="/general/department?p=<%= pageCount || 1 %>&title=<%= req.query.title %>&type=<%= req.query.type %>"">»</a>
</div>
<form id="frmCreateCar" action="/general/car/create" method="post">
    <input type="hidden" value="<%= csrf %>" name="_csrf" />
</form>