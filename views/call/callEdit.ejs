<% include callMenu %>
<h2><%= title %></h2>
<form method="post" class="block" id="frmEditCall">
    <input type="hidden" name="_csrf" value="<%= csrf %>" />
    <h3>来电信息修改</h3>
    <table class="detail-table">
        <tr>
            <td class="row-title">业务员</td>
            <td><input type="text" class="textbox w-3" name="user" id="txtCallUser" value="<%=call.user.name%>" /></td>
        </tr>
        <tr>
            <td class="row-title">订单号</td>
            <td><input type="text" class="textbox w-3" name="order" value="<%=call.order.number%>" /></td>
        </tr>
        <tr>
            <td class="row-title">是否需要回访</td>
            <td>
                <select name="needFeedback" id="slCallNeedFeedback">
                    <%
                        if(call.needFeedback){
                    %>
                       <option value="1" selected>是</option>
                       <option value="0">否</option>
                    <%
                        }else{
                    %>
                       <option value="0" selected>否</option>
                       <option value="1">是</option>
                    <%
                        }
                    %>
                </select>
            </td>
        </tr>

        <tr style="display: <%=call.needFeedback?"yes":"none"%>" id="trCallIsFeedbacked">
                <td class="row-title">是否已经回访</td>
                <td>
                    <select name="isFeedbacked" id="slCallIsFeedbacked">
                        <%
                           if(call.isFeedbacked){
                        %>
                           <option value="1" selected>是</option>
                           <option value="0">否</option>
                        <%
                          }else{
                        %>
                           <option value="0" selected>否</option>
                           <option value="1">是</option>
                        <%
                          }
                        %>
                    </select>
                </td>
        </tr>

        <tr style="display: <%=call.isFeedbacked?"yes":"none"%>" id="trCallFeedbackResult">
            <td class="row-title">回访结果</td>
            <td><input type="text" class="textbox w-3" name="feedbackResult" value="<%=call.feedbackResult%>" /></td>
        </tr>

        <tr>
            <td class="row-title">备注</td>
            <td><input type="text" class="textbox w-3" name="hint" value="<%=call.hint%>" /></td>
        </tr>
        <tr>
            <td class="row-title">内容</td>
            <td><input type="text" class="textbox w-3" name="content" value="<%=call.content%>" /></td>
        </tr>
        <tr>
            <td class="row-title">热线类型编码</td>
            <td><input type="text" class="textbox w-3" name="type" value="<%=call.type%>" />例如：1</td>
        </tr>
    </table>
    <p><input type="button" value="保存" class="button blue" onclick="saveCall('<%=call._id%>')" /></p>
</form>