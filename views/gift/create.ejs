<script src="/scripts/ckeditor/ckeditor.js"></script>
<h2><%= title %></h2>
<form class="block" method="post">
    <input type="hidden" name="_csrf" value="<%= csrf %>" />
    <h3>赠品信息</h3>
    <table class="detail-table">
        <tr>
            <td class="row-title">赠品名称</td>
            <td><input type="text" name="title" class="textbox w-3" /></td>
        </tr>
        <tr>
            <td class="row-title">赠品描述</td>
            <td><textarea name="description" class="ckeditor"></textarea></td>
        </tr>
        <tr>
            <td class="row-title">赠品照片</td>
            <td><input type="file" name="file" /></td>
        </tr>
    </table>
    <p><input type="submit" class="button blue" value="添加赠品" /></p>
</form>