<% include giftMenu %>
<div class="block">
    <h3>赠品信息</h3>
    <table class="detail-table">
        <tr>
            <td class="row-title">赠品名称</td>
            <td><%= gift.title %></td>
        </tr>
        <% if (gift.picture) { %>
        <tr>
            <td class="row-title">赠品照片</td>
            <td><%= gift.title %></td>
        </tr>
        <% } %>
        <tr>
            <td class="row-title">赠品介绍</td>
            <td><%- xss.process(gift.description) %></td>
        </tr>
    </table>
</div>