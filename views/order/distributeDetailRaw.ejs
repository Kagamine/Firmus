<style>
    td, th {
        padding: 3px;
    }
    table {
        font-size: 9px;
        text-align: left;
    }
</style>
<button onClick="window.print()">打印</button>
<% for (var x in report2) { %>
<% for (var b in report2[x]) { %>
<p><%= x %> <%= b %></p>
<table class="detail-table">
    <thead>
    <tr>
        <td class="row-title">奶品品相</td>
        <td>数量(瓶)</td>
    </tr>
    </thead>
    <tbody>
    <% for (var y in report2[x][b]) { %>
    <tr>
        <td class="row-title"><%= y %></td>
        <td><%= report2[x][b][y] %></td>
    </tr>
    <% } %>
    </tbody>
</table><br />
<table class="table">
    <thead class="tl">
    <tr>
        <th>订单号</th>
        <th>客户姓名</th>
        <th>奶品</th>
        <th>数量</th>
        <th>地址</th>
        <th>联系电话</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <% report.filter(c => c.milkStation + " " + c.distributor == b && c.city == x).sort((a, b) => { if (a.distributor == b.distributor) return a.address.localeCompare(b.address); else return a.distributor.localeCompare(b.distributor); }).forEach(x => { %>
    <tr>
        <td><%= x.number %></td>
        <td><%= x.customer %></td>
        <td><%= x.milkType %></td>
        <td><%= x.count %></td>
        <td><%= x.address %></td>
        <td><%= x.tel %></td>
        <td><%= x.hint %></td>
    </tr>
    <% }) %>
    </tbody>
</table>
<br />
<br />
<% }} %>